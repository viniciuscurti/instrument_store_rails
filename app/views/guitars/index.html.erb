<h1>Guitars</h1>

<div id="guitars">
  <% @guitars.each do |guitar| %>
    <%= render guitar %>
    <p>
      <%= link_to "Show this guitar", guitar %>
      <%= button_to "Destroy this guitar", guitar, method: :delete %>
    </p>
  <% end %>
</div>

